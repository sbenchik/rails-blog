<div class="comment">
    <div class="content">
        <a class="author"><%= comment.author_name %></a>
        <div class="metadata">
            <span class="date">Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> ago</span>
        </div>
        <div class="text">
            <%= comment.body %>
        </div>
    </div>
</div>
<div class="ui hidden divider"></div>